<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="www.ccyblog.novel.modules.register.dao.AccountDao">
    <insert id="createAccount" parameterType="www.ccyblog.novel.modules.register.entity.Account">
        insert into account (username, password, salt) value(#{username}, #{password}, #{salt})
    </insert>
    <select id="getAccount" parameterType="String" resultType="www.ccyblog.novel.modules.register.entity.Account">
        select * from account where username = #{userName}
    </select>
    <update id="update" parameterType="www.ccyblog.novel.modules.register.entity.Account">
        update account
        <set>
            <if test="password !=null">password = #{password}</if>
        </set>
    </update>
</mapper>
